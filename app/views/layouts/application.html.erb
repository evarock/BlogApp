<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
        <p>Hello, <%= current_user.name %> <%= link_to current_user.email, "mailto:#{current_user.email}" %></p>
        <%= link_to "Log out", destroy_user_session_url, method: :delete %>
        <% else %>
        <%= link_to "Sign in", new_user_session_url %> or <%= link_to "Sign up", new_user_registration_url %>
        <% end %>
    <%= yield %>
  </body>
</html>
