<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
        <p>Hello, <%= current_user.name %> ! </p>
        <%= link_to "Log out", destroy_user_session_url, method: :delete %>
        <%= link_to 'Profile', user_path(current_user) %>
        <% if current_user.blog.nil? %>
          <%= link_to 'Create blog', new_blog_path %>
        <% else %>
          <%= link_to 'My blog', blog_path(current_user.blog) %>
        <% end %>
        <% if current_user.admin? %>
          <%= link_to 'All users', users_path %>
        <% end %>
    <% else %>
        <%= link_to "Sign in", new_user_session_url %> or <%= link_to "Sign up", new_user_registration_url %>
    <% end %>
    <%= yield %>
  </body>
</html>
